			<li class="divider"></li>
			<li><%= link_to "Usuarios", users_url %></li>
			<li class="has-dropdown"><a href="#">Mi Cuenta</a>
				<ul class="dropdown">
					<li><%= link_to "Perfil", current_user %></li>
					<li><%= link_to "Ajustes", edit_user_path(current_user) %></li>
					<li><%= link_to "Salir", salir_path, method: "delete" %></li>
				</ul>
			</li>
			</li>
			<% else %>
			<li class="divider"></li>
			<li><%= link_to "Entrar", entrar_path %></li>
			<% end %>
			</ul>
		</section>
	</nav>
