<header>
	<nav class="top-bar">
		<ul class="title-area">
			<li class="name"><h1><%= link_to "El Buen Gusto", root_path %></h1></li>
			<li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
		</ul>
		<section class="top-bar-section">
			<ul class="right">
			<li class="divider"></li>
			<li><%= link_to "Ayuda", ayuda_path %></li>
