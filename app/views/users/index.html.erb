<% provide(:title, "Todos los usuarios") %>
<h1><%= yield :title %></h1>

<ul class="users">
	<% @users.each do |user| %>
	<li>
		<%= link_to user.name, user %>
		<% if current_user.admin? && !current_user?(user) %>
		<%= link_to "Borrar", user, method: :delete, data: {confirm: "¿Estás seguro?"} %>
		<% end %>
	</li>
	<% end %>
</ul>