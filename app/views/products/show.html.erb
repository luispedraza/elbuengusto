<p id="notice"><%= notice %></p>

<p>
	<strong>Name:</strong>
	<%= @product.name %>
</p>

<p>
	<strong>Description:</strong>
	<%= @product.description %>
</p>

<p>
	<strong>Price:</strong>
	<%= @product.price %>
</p>

<div class="row">
	<% @product.product_images.each do |photo| %>
	<div class="row">
		<%= image_tag photo.photo.url(:large) %>
		<%= image_tag photo.photo.url(:small) %>
	</div>
	<% end %>
</div>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
