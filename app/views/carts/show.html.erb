<p id="notice"><%= notice %></p>

<h2>Tu carro de la compra</h2>


<table id="cart">
	<% @cart.cart_items.each do |item| %>
	<tr>
		<td><%= item.quantity %></td><td><%= item.product.name %></td><td><%= number_to_currency(item.total_price) %></td>
	</tr>
	<% end %>
	<tr class="total"><td></td><td>Total:</td><td><%= number_to_currency(@cart.total_price) %></td></tr>
</table>


<%= button_to 'Vaciar el carrito',  @cart,  method: :delete, confirm: 'Â¿Confirmas que quieres vaciar el carrito?', class: "button" %>
<%= link_to 'Seguir comprando', store_url, class: "button" %>

